$C = "../Common.ui";

@BackButtonStyle = TextButtonStyle(
  Default: (Background: #4a5568, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #5a6578, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #3a4558, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  Anchor: (Width: 550, Height: 480);
  Background: #1a1a2e(0.96);
  LayoutMode: Top;
  Padding: (Full: 24);

  Label #Title {
    Text: "SELECT ICON";
    Anchor: (Height: 44);
    Style: (FontSize: 22, TextColor: #ffffff, HorizontalAlignment: Center, RenderBold: true);
  }

  Group { Anchor: (Height: 2); Background: #3a7bd5; }
  Group { Anchor: (Height: 20); }

  Label {
    Text: "Choose an icon for your waypoint:";
    Anchor: (Height: 24);
    Style: (FontSize: 14, TextColor: #96a9be, HorizontalAlignment: Center);
  }

  Group { Anchor: (Height: 16); }

  Group #IconGrid {
    FlexWeight: 1;
    LayoutMode: TopScrolling;
    Background: #0f1621(0.7);
    Padding: (Full: 12);
    ScrollbarStyle: (
      Spacing: 6,
      Size: 6,
      Background: (TexturePath: "Common/Scrollbar.png", Border: 3),
      Handle: (TexturePath: "Common/ScrollbarHandle.png", Border: 3),
      HoveredHandle: (TexturePath: "Common/ScrollbarHandleHovered.png", Border: 3),
      DraggedHandle: (TexturePath: "Common/ScrollbarHandleDragged.png", Border: 3)
    );
  }

  Group { Anchor: (Height: 20); }

  TextButton #BackButton {
    Text: "BACK";
    Anchor: (Height: 44);
    Style: @BackButtonStyle;
  }
}
