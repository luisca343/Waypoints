$C = "../Common.ui";

$C.@PageOverlay {
    $C.@DecoratedContainer {
        Anchor: (Width: 500, Height: 450);

        #Title { $C.@Title { @Text = "CHOOSE ICON"; } }

        #Content {
            LayoutMode: Top;
            Padding: (Full: 24);

            Group { Anchor: (Height: 20); }

            Group #IconList {
                FlexWeight: 1;
                LayoutMode: TopScrolling;
                Background: #0f1621(0.7);
                Padding: (Full: 8);
                ScrollbarStyle: $C.@DefaultScrollbarStyle;
            }

            Group { Anchor: (Height: 20); }

            TextButton #BackButton {
                Text: "BACK";
                Anchor: (Height: 44);
                Style: $C.@SecondaryTextButtonStyle;
            }
        }
    }
}
