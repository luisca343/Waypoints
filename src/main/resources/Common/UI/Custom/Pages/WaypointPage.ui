$C = "../Common.ui";

Group {
    Anchor: (Width: 650, Height: 450);
    Background: #1a1a2e(0.96);
    LayoutMode: Top;
    Padding: (Full: 24);

    Label #Title {
        Text: "WAYPOINTS";
        Anchor: (Height: 44);
        Style: (FontSize: 26, TextColor: #ffffff, HorizontalAlignment: Center, RenderBold: true);
    }

    Group { Anchor: (Height: 2); Background: #3a7bd5; }
    Group { Anchor: (Height: 20); }

    Group #WaypointsList {
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Background: #0f1621(0.7);
        Padding: (Full: 8);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
    }

    Group { Anchor: (Height: 20); }

    TextButton #CreateWaypointButton {
        Text: "CREATE WAYPOINT";
        Anchor: (Height: 44);
        Style: $C.@DefaultTextButtonStyle;
    }
}