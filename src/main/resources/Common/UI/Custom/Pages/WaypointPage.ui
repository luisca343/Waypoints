$C = "../Common.ui";

$C.@PageOverlay {
    $C.@DecoratedContainer {
        @CloseButton = true;
        Anchor: (Width: 650, Height: 450);

        #Title { $C.@Title { @Text = "WAYPOINTS"; } }

        #Content {
            LayoutMode: Top;
            Padding: (Full: 24);

            Group { Anchor: (Height: 12); }

            Group {
                LayoutMode: Left;
                Anchor: (Height: 44);

                $C.@TextField #SearchInput {
                    FlexWeight: 1;
                    Anchor: (Height: 40);
                    Padding: (Horizontal: 12);
                    Background: #0f1621;
                    PlaceholderText: "Search waypoints...";
                }
            }

            Group { Anchor: (Height: 12); }

            Group #WaypointsList {
                FlexWeight: 1;
                LayoutMode: TopScrolling;
                Background: #0f1621(0.7);
                Padding: (Full: 8);
                ScrollbarStyle: $C.@DefaultScrollbarStyle;
            }

            Group { Anchor: (Height: 20); }

            TextButton #CreateWaypointButton {
                Text: "CREATE WAYPOINT";
                Anchor: (Height: 44);
                Style: $C.@DefaultTextButtonStyle;
            }
        }
    }
}