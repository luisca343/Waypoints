@RemoveButtonStyle = TextButtonStyle(
  Default: (Background: #c53030, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #dc3545, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #a02020, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@EditButtonStyle = TextButtonStyle(
  Default: (Background: #2563eb, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3b82f6, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1e40af, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@TeleportButtonStyle = TextButtonStyle(
  Default: (Background: #10b981, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #34d399, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #059669, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

$C = "../Common.ui";

Group {
  LayoutMode: Left;
  Anchor: (Height: 64);
  Background: #1e2836(0.9);
  Padding: (Left: 16, Right: 16, Top: 10, Bottom: 10);

  Group {
    FlexWeight: 1;
    LayoutMode: Top;

    Label #WaypointName {
      Text: "WaypointName";
      Anchor: (Height: 22);
      Style: (FontSize: 16, TextColor: #ffffff, RenderBold: true, VerticalAlignment: Center);
    }

    Label #WaypointCoordinates {
      Text: "";
      Anchor: (Height: 18);
      Style: (FontSize: 12, TextColor: #8b95a8, VerticalAlignment: Center);
    }
  }

  Group { Anchor: (Width: 12); }

  TextButton #TeleportButton {
    Text: "TP";
    Anchor: (Width: 60, Height: 44);
    Style: @TeleportButtonStyle;
  }

  Group { Anchor: (Width: 8); }

  TextButton #EditButton {
    Text: "EDIT";
    Anchor: (Width: 80, Height: 44);
    Style: @EditButtonStyle;
  }

  Group { Anchor: (Width: 8); }

  TextButton #RemoveButton {
    Text: "REMOVE";
    Anchor: (Width: 90, Height: 44);
    Style: @RemoveButtonStyle;
  }
}