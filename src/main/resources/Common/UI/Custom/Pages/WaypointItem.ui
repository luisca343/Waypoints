$C = "../Common.ui";

Group {
  LayoutMode: Left;
  Anchor: (Height: 64);
  Background: #1e2836(0.9);
  Padding: (Left: 16, Right: 16, Top: 10, Bottom: 10);

  Group {
    FlexWeight: 1;
    LayoutMode: Top;

    Label #WaypointName {
      Text: "WaypointName";
      Anchor: (Height: 22);
      Style: (FontSize: 16, TextColor: #ffffff, RenderBold: true, VerticalAlignment: Center);
    }

    Label #WaypointCoordinates {
      Text: "";
      Anchor: (Height: 18);
      Style: (FontSize: 12, TextColor: #8b95a8, VerticalAlignment: Center);
    }
  }

  Group { Anchor: (Width: 16); }

  TextButton #TeleportButton {
    Text: "TP";
    Anchor: (Width: 50, Height: 38);
    Style: $C.@TertiaryTextButtonStyle;
  }

  Group { Anchor: (Width: 12); }

  TextButton #EditButton {
    Text: "EDIT";
    Anchor: (Width: 70, Height: 38);
    Style: $C.@SecondaryTextButtonStyle;
  }

  Group { Anchor: (Width: 12); }

  TextButton #RemoveButton {
    Text: "REMOVE";
    Anchor: (Width: 90, Height: 38);
    Style: $C.@CancelTextButtonStyle;
  }
}