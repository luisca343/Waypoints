@PrimaryButtonStyle = TextButtonStyle(
  Default: (Background: #3a7bd5, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4a8be5, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2a6bc5, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@CancelButtonStyle = TextButtonStyle(
  Default: (Background: #4a5568, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #5a6578, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #3a4558, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  Anchor: (Width: 500, Height: 320);
  Background: #1a1a2e(0.96);
  LayoutMode: Top;
  Padding: (Full: 24);

  Label #Title {
    Text: "ADD WAYPOINT";
    Anchor: (Height: 44);
    Style: (FontSize: 22, TextColor: #ffffff, HorizontalAlignment: Center, RenderBold: true);
  }

  Group { Anchor: (Height: 2); Background: #3a7bd5; }
  Group { Anchor: (Height: 20); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 44);

    Label {
      Text: "Name:";
      Anchor: (Width: 80);
      Style: (FontSize: 15, TextColor: #96a9be, VerticalAlignment: Center, RenderBold: true);
    }

    TextField #WaypointNameInput {
      FlexWeight: 1;
      Anchor: (Height: 40);
      Padding: (Horizontal: 12);
      Background: #0f1621;
      PlaceholderText: "Enter waypoint name...";
    }
  }

  Group { Anchor: (Height: 16); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 44);

    Label {
      Text: "X:";
      Anchor: (Width: 40);
      Style: (FontSize: 15, TextColor: #96a9be, VerticalAlignment: Center, RenderBold: true);
    }

    TextField #XInput {
      FlexWeight: 1;
      Anchor: (Height: 40);
      Padding: (Horizontal: 12);
      Background: #0f1621;
      PlaceholderText: "0";
    }

    Group { Anchor: (Width: 12); }

    Label {
      Text: "Y:";
      Anchor: (Width: 40);
      Style: (FontSize: 15, TextColor: #96a9be, VerticalAlignment: Center, RenderBold: true);
    }

    TextField #YInput {
      FlexWeight: 1;
      Anchor: (Height: 40);
      Padding: (Horizontal: 12);
      Background: #0f1621;
      PlaceholderText: "0";
    }

    Group { Anchor: (Width: 12); }

    Label {
      Text: "Z:";
      Anchor: (Width: 40);
      Style: (FontSize: 15, TextColor: #96a9be, VerticalAlignment: Center, RenderBold: true);
    }

    TextField #ZInput {
      FlexWeight: 1;
      Anchor: (Height: 40);
      Padding: (Horizontal: 12);
      Background: #0f1621;
      PlaceholderText: "0";
    }
  }

  Group { Anchor: (Height: 16); }

  Label #Error {
    Text: "";
    Anchor: (Height: 24);
    Visible: false;
    Style: (FontSize: 13, TextColor: #ff6b6b, HorizontalAlignment: Center, RenderBold: true);
  }

  Group { FlexWeight: 1; }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 44);

    Group { FlexWeight: 1; }

    TextButton #AddButton {
      Text: "ADD";
      Anchor: (Width: 110, Height: 40);
      Style: @PrimaryButtonStyle;
    }

    Group { Anchor: (Width: 16); }

    TextButton #CancelButton {
      Text: "CANCEL";
      Anchor: (Width: 110, Height: 40);
      Style: @CancelButtonStyle;
    }

    Group { FlexWeight: 1; }
  }
}